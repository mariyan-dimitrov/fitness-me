@model IEnumerable<FitnessDiary_17118074.Models.Weight>
@{
    ViewData["Title"] = "Weights list";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Weight</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Weight" asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> &nbsp; Add New Weight Record
            </a>
        </div>
    </div>

    <br /><br />

    @if (Model.Count() > 0)
    {
        <table id="weight-table" class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Mass in kg
@*                        <a asp-action="Index" asp-route-sortOrder="@ViewData["WeightSortParm"]">@Html.DisplayNameFor(model => model.Mass) in kg</a>
*@                    </th>
                    <th>
                        Day
@*                        <a asp-action="Index" asp-route-sortOrder="@ViewData["DateSortParm"]">@Html.DisplayNameFor(model => model.Day)</a>
*@
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="50%">@obj.Mass</td>
                        <td width="30%">@obj.Day.ToString("MM/dd/yyyy")</td>
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Weight" asp-route-Id="@obj.Id" asp-action="Edit" class="btn btn-primary mx-2">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-controller="Weight" asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger mx-2">
                                    <i class="far fa-trash-alt"></i>
                                </a>
                            </div>
                        </td>
                    </tr>

                }
            </tbody>
        </table>
    }
    else
    {
        <p> No weight records are added.</p>
    }
</div>
