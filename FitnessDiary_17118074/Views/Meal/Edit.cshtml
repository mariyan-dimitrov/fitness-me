@model FitnessDiary_17118074.Models.ViewModels.MealVM
@{ ViewData["Title"] = "Edit Meal"; }

<form method="post">
    <input asp-for="Meal.Id" hidden />
    <div class="border p-3">

        <div class="form-group row">
            <h2 class="text-info pl-3">Edit Meal</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Meal.FoodId"></label>
                    </div>
                    <div class="col-8">
                        <select id="Meal.FoodId" class="foods-dropdown" name="Meal.FoodId">
                            <option value="" selected disabled>-- Select Food --</option>
                            @foreach (var food in Model.Foods)
                            {
                <option value="@food.Id">@food.Name</option>}
                        </select>
                        <span asp-validation-for="Meal.FoodId" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Meal.Type"></label>
                    </div>
                    <div class="col-8">
                        <select id="Meal.Type" name="Meal.Type">
                            <option value="" selected disabled>-- Select Type --</option>
                            <option value="Breakfast">Breakfast</option>
                            <option value="Lunch">Lunch</option>
                            <option value="Dinner">Dinner</option>
                        </select>
                        <span asp-validation-for="Meal.Type" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Meal.Portion"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Meal.Portion" class="form-control" />
                        <span asp-validation-for="Meal.Portion" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Meal.Date"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Meal.Date" class="form-control" />
                        <span asp-validation-for="Meal.Date" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            <input type="submit" onclick="recordUpdated()" class="btn btn-info w-100" value="Update" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100"><i class="fas fa-sign-out-alt"></i> Back</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
            </div>
        </div>
    </div>

</form>

@section Scripts{
    @{
       <partial name="_ValidationScriptsPartial" />
    }
}

<script>
    $(document).ready(function () {
        $('.foods-dropdown').select2();
    });
</script>