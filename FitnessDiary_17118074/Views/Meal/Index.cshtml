@model IEnumerable<FitnessDiary_17118074.Models.Meal>
@{
    ViewData["Title"] = "Today's Meals";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Today's meal</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Meal" asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> &nbsp; Add New Entry
            </a>
        </div>
    </div>

    <br /><br />
    <h3>Calories for the day: @ViewData["DailyCalories"]</h3>
    <br />
    <h3>Breakfast</h3>
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Food Name
                </th>
                <th>
                    Portion in grams
                </th>
                <th>
                    Calories
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                if (obj.Type == "Breakfast")
                {
                    <tr>
                        <td width="50%">@obj.Food.Name</td>
                        <td width="30%">@(obj.Portion * 100)</td>
                        <td width="30%">@(Math.Round((obj.Food.Calories * obj.Portion), 2))</td>
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Meal" asp-route-Id="@obj.Id" asp-action="Edit" class="btn btn-primary mx-2">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-controller="Meal" asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger mx-2">
                                    <i class="far fa-trash-alt"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>

