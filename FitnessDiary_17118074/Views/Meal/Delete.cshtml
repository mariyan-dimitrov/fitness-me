@model FitnessDiary_17118074.Models.Meal
@{ ViewData["Title"] = "Remove Meal"; }

<form method="post" asp-action="DeleteMeal" onsubmit="return recordDeleted();">
    <input asp-for="Id" hidden />
    <div class="border p-3">

        <div class="form-group row">
            <h2 class="text-info pl-3">Delete Meal</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Food.Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Food.Name" disabled class="form-control" />
                    </div>
                    <div class="col-4">
                        <label asp-for="Type"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Type" disabled class="form-control" />
                    </div>
                    <div class="col-4">
                        <label asp-for="Portion"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Portion" disabled class="form-control" />
                    </div>
                    <div class="col-4">
                        <label asp-for="Date"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Date" disabled class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            <input type="submit" class="btn btn-danger w-100" value="Delete" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100"><i class="fas fa-sign-out-alt"></i> Back</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{
                        <partial name="_ValidationScriptsPartial" />
    }
}