@model FitnessDiary_17118074.Models.ViewModels.NutritionVM
@{
    ViewData["Title"] = "Add Food";
}

<form method="post" asp-action="Create" onsubmit="return recordCreated();">
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info pl-3">Add New Food</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Food.Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Food.Name" class="form-control" />
                        <span asp-validation-for="Food.Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Nutrition.Protein"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Nutrition.Protein" class="form-control" />
                        <span asp-validation-for="Nutrition.Protein" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Nutrition.Carbohydrates"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Nutrition.Carbohydrates" class="form-control" />
                        <span asp-validation-for="Nutrition.Carbohydrates" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Nutrition.Fats"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Nutrition.Fats" class="form-control" />
                        <span asp-validation-for="Nutrition.Fats" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            <input type="submit" class="btn btn-info w-100" value="Create" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100"><i class="fas fa-sign-out-alt"></i> Back</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
            </div>
        </div>
    </div>

</form>

@section Scripts{
    @{
                        <partial name="_ValidationScriptsPartial" />
    }
}
